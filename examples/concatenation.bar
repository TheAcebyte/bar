PROGRAM Concatenation
VARIABLES
    result, hello, world: STRING
    comma, space, mark: CHARACTER
BEGIN
    LET hello = "Hello"
    LET world = "World"

    LET comma = ','
    LET space = ' '
    LET mark = '!'

    # You can concatenate strings and characters using the & operator.
    LET result = hello & comma & space & world & mark
    PRINT result
END
